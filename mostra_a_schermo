@Library('imparo-utili@main') _



import Utily
def utilities = new Utily()


 
def issueData = [:]
def a = ""
def b = ""
pipeline{
  agent any
  parameters{
        string(
          name: 'nome',
          defaultValue: '',
          trim: true
       )
        string(
          name: 'cognome',
          defaultValue: '',
          trim: true
      )
  }

  stages{
    stage("Inizialization"){
      steps{
        script{
          issueData = [
            nome : params.nome,
            cognome : params.cognome
          ]
        }
      }
    }
    stage("Data Preparation"){
      steps{
        script{
          a = issueData.nome.toLowerCase()
          b = issueData.cognome.toLowerCase()
        }
      }
    }
    stage("Execution"){
        steps{
          script{
            String upn = ""+a+"."+b+"@miao.it"
            utilities.txtFile(""+upn)
            echo(""+upn)
        }
      }
    }
  }
}